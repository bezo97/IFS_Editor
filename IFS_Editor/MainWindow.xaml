        <CommandBinding Command="New" Executed="NewFlame_Click"></CommandBinding>
        <CommandBinding Command="Open" Executed="OpenFile_Click"></CommandBinding>
        <CommandBinding Command="SelectAll" Executed="SaveAll_Click"></CommandBinding>
