<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IFS_Editor"
        xmlns:System="clr-namespace:System;assembly=mscorlib" xmlns:View="clr-namespace:IFS_Editor.View" x:Class="IFS_Editor.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel LastChildFill="true">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New"/>
                <MenuItem Header="_Open"/>
                <MenuItem Header="_Save"/>
                <Separator />
                <MenuItem Header="_Exit"/>
            </MenuItem>
            <MenuItem Header="_Settings">
                <MenuItem Header="_Camera Settings"/>
                <MenuItem Header="_Render Settings" Click="ShowRenderSettingsWindow"/>
                <MenuItem Header="_Imaging Settings" Click="ShowImagingSettingsWindow"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <System:String>status</System:String>
        </StatusBar>
        <ToolBarTray DockPanel.Dock="Left" Orientation="Vertical">
            <ToolBar Band="0" BandIndex="0">
                <Button Content="Add" Click="AddXForm_Click"/>
                <Button Content="jajaj"/>
            </ToolBar>
            <ToolBar Band="0" BandIndex="1">
                <Button Content="New"/>
                <Button Content="Open"/>
                <Button Content="Save">
                    <!-- ide betenni a View\Icons\*.xaml dolgokat??? -->
                </Button>
            </ToolBar>
            <ToolBar Band="0" BandIndex="2">
                <Button Content="Imag"/>
                <Button Content="Rend"/>
                <Button Content="Camera">
                    <!-- ide betenni a View\Icons\*.xaml dolgokat??? -->
                </Button>
            </ToolBar>
        </ToolBarTray>
        <ToolBarTray DockPanel.Dock="Right" Orientation="Vertical"/>
        <View:NodeMap x:Name="nodemap_main">
            <View:Node Height="100" Canvas.Left="116" Canvas.Top="70" Width="100"/>
            <View:Node Height="200" Canvas.Left="255" Canvas.Top="39" Width="200"/>

        </View:NodeMap>
    </DockPanel>
</Window>
