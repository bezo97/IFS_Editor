<ListBoxItem x:Name="listBoxItem" x:Class="IFS_Editor.View.FlameListboxItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IFS_Editor.View"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
             MouseEnter="listBoxItem_MouseEnter"
             MouseLeave="listBoxItem_MouseLeave" Width="230" Padding="5,2">
    <Grid Width="220">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>
        <Label x:Name="DisplayText" Grid.Row="0" Grid.Column="0" Padding="0">Unnamed Flame</Label>
        <Button x:Name="RemoveButton" Grid.Row="0" Grid.Column="1" Width="30" Click="RemoveButton_Click" VerticalAlignment="Center" HorizontalAlignment="Right" HorizontalContentAlignment="Center" Margin="0,0,10,0" Padding="0" Visibility="Hidden">
            <Frame Source="Icons/RemoveCommand_16x.xaml"/>
        </Button>
    </Grid>
</ListBoxItem>
