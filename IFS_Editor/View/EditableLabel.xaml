<UserControl x:Class="IFS_Editor.View.EditableLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IFS_Editor.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBox x:Name="EditText" Grid.Row="0" Grid.Column="0" Padding="0" Text="{Binding EditableText, UpdateSourceTrigger=PropertyChanged}" KeyDown="EditText_KeyDown" Visibility="Collapsed" LostFocus="EditText_LostFocus"/>
        <Label x:Name="DisplayText" Grid.Row="0" Grid.Column="0" Padding="0" Content="{Binding EditableText}" MouseDoubleClick="DisplayText_MouseDoubleClick" Visibility="Visible"/>
    </Grid>
</UserControl>
