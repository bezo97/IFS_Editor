<UserControl x:Class="IFS_Editor.View.Node"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IFS_Editor.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Ellipse Fill="#FFF4F4F5" Stretch="Fill" StrokeThickness="2">
            <!-- UniformToFill is lehet ^ -->
            <Ellipse.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.5"/>
            </Ellipse.Effect>
        </Ellipse>
        <Label Content="Linear" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" FontSize="22"/>

    </Grid>
</UserControl>
