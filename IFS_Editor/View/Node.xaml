<UserControl x:Class="IFS_Editor.View.Node"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IFS_Editor.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Ellipse Stretch="Fill" StrokeThickness="2" Cursor="Hand">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="White" Offset="0.544"/>
                    <GradientStop Color="#FFDFE6EE" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
            <!-- UniformToFill is lehet ^ -->
            <Ellipse.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.5"/>
            </Ellipse.Effect>
        </Ellipse>
        <Label Content="Linear" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" FontSize="22" Cursor="Hand"/>

    </Grid>
</UserControl>
