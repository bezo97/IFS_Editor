<StackPanel x:Name="stackPanel" x:Class="IFS_Editor.View.FlameBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IFS_Editor.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="250">
    <StackPanel.Background>
        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
    </StackPanel.Background>
    <StackPanel Orientation="Horizontal">
        <Label>Flame Browser: </Label>
        <Label x:Name="FileNameLabel">Unnamed Flame</Label>
        <!--<Button>elrejt?</Button>-->
    </StackPanel>
    <StackPanel Orientation="Horizontal">
        <Button>[+]</Button>
        <Button>[-]</Button>
    </StackPanel>
    <ListBox x:Name="FlameListBox" ScrollViewer.VerticalScrollBarVisibility="auto" SelectionMode="Single" SelectionChanged="Li_Selected"/>
</StackPanel>
