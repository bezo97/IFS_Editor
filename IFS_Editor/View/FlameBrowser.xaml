<StackPanel x:Name="stackPanel" x:Class="IFS_Editor.View.FlameBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IFS_Editor.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="250">
    <StackPanel.Background>
        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
    </StackPanel.Background>
    <StackPanel Orientation="Horizontal">
        <Frame Source="Icons/KPIBrowserView_16x.xaml" Margin="10,0,0,0"/>
        <!--<Label>Flame Browser:</Label>-->
        <Label x:Name="FileNameLabel">Unnamed Flame Collection</Label>
    </StackPanel>
    <ListBox x:Name="FlameListBox" ScrollViewer.VerticalScrollBarVisibility="auto" SelectionMode="Single" SelectionChanged="Li_Selected"/>
    <Button Click="AddFlameButton_Click" Margin="5" ToolTip="Add new empty flame to the collection.">
        <Frame Source="Icons/Add_grey_16x.xaml"/>
    </Button>
</StackPanel>
